# =================================================================
# PayPal Proxy Go - Environment Configuration
# =================================================================

# Server Configuration
PORT=8080
ENVIRONMENT=development
LOG_LEVEL=info
BASE_URL=http://localhost:8080
API_TIMEOUT=30
RATE_LIMIT=100

# =================================================================
# MagicSpore WooCommerce Configuration (Source Store)
# =================================================================
MAGIC_SITE_URL=https://magicspore.com
MAGIC_CONSUMER_KEY=ck_your_magicspore_consumer_key_here
MAGIC_CONSUMER_SECRET=cs_your_magicspore_consumer_secret_here

# =================================================================
# OITAM WooCommerce Configuration (Payment Processor Store)
# =================================================================
OITAM_SITE_URL=https://oitam.com
OITAM_CONSUMER_KEY=ck_your_oitam_consumer_key_here
OITAM_CONSUMER_SECRET=cs_your_oitam_consumer_secret_here
OITAM_CHECKOUT_URL=https://oitam.com/checkout/order-pay

# =================================================================
# PayPal Configuration
# =================================================================
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here
PAYPAL_API_BASE=https://api-m.sandbox.paypal.com

# =================================================================
# Return URLs Configuration
# =================================================================
SUCCESS_RETURN_URL=https://magicspore.com/dziekujemy
CANCEL_RETURN_URL=https://magicspore.com/koszyk
ERROR_RETURN_URL=https://magicspore.com/blad-platnosci

# =================================================================
# Security Configuration
# =================================================================
CORS_ALLOWED_ORIGINS=https://magicspore.com,https://oitam.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CSRF_SECRET_KEY=your_csrf_secret_key_32_chars_min
JWT_SECRET_KEY=your_jwt_secret_key_32_chars_min

# =================================================================
# Database Configuration (Optional - for future use)
# =================================================================
# DATABASE_URL=postgresql://username:password@localhost:5432/paypal_proxy
# DATABASE_MAX_CONNECTIONS=25
# DATABASE_TIMEOUT=30

# =================================================================
# Redis Configuration (Optional - for caching/sessions)
# =================================================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_TIMEOUT=5

# =================================================================
# Monitoring & Observability
# =================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =================================================================
# Email Configuration (Optional - for notifications)
# =================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@paypal-proxy.com

# =================================================================
# Feature Flags
# =================================================================
ENABLE_ORDER_CACHING=true
ENABLE_WEBHOOK_RETRY=true
ENABLE_REQUEST_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_HEALTH_CHECKS=true

# =================================================================
# Development/Testing Configuration
# =================================================================
DEBUG_MODE=false
MOCK_PAYPAL=false
MOCK_WOOCOMMERCE=false
TEST_ORDER_ID=123
TEST_AMOUNT=10.00

# =================================================================
# Production Specific Configuration
# =================================================================
# USE_TLS=true
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem
# LOG_FILE=/var/log/paypal-proxy/app.log
# PID_FILE=/var/run/paypal-proxy/app.pid

# =================================================================
# Backup & Recovery
# =================================================================
# BACKUP_ENABLED=false
# BACKUP_INTERVAL=24h
# BACKUP_RETENTION=7d
# BACKUP_LOCATION=/var/backups/paypal-proxy

# =================================================================
# Advanced Configuration
# =================================================================
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=60s
IDLE_TIMEOUT=120s
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
GRACEFUL_SHUTDOWN_TIMEOUT=30s

# WooCommerce API Configuration
WC_API_VERSION=v3
WC_USER_AGENT=PayPalProxy/1.0
WC_TIMEOUT=30
WC_RETRY_ATTEMPTS=3
WC_RETRY_DELAY=1s

# PayPal API Configuration
PAYPAL_API_VERSION=v1
PAYPAL_USER_AGENT=PayPalProxy/1.0
PAYPAL_TIMEOUT=30
PAYPAL_RETRY_ATTEMPTS=3
PAYPAL_RETRY_DELAY=1s

# =================================================================
# Environment Specific Overrides
# =================================================================

# Development
# LOG_LEVEL=debug
# DEBUG_MODE=true
# CORS_ALLOWED_ORIGINS=*

# Staging
# ENVIRONMENT=staging
# LOG_LEVEL=info
# PAYPAL_ENVIRONMENT=sandbox

# Production
# ENVIRONMENT=production
# LOG_LEVEL=warn
# PAYPAL_ENVIRONMENT=live
